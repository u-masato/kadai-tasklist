<h1>タスク一覧</h1>

<% if logged_in? %>

  <div>
    <%= link_to 'Logout', logout_path, method: :delete %>
  </div>
  
  <p><%= current_user.name %>のタスク</p>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%=task.content %>  &gt;&gt; <%=task.status %></li>
    <% end %>
    <p><%= link_to '新しいタスクを作る', new_task_path %></p>
  </ul>
<% else %>
  <h2><%= link_to 'Sign up now', signup_path %></h2>
  <h2><%= link_to 'Login', login_path %></h2>

<% end %>